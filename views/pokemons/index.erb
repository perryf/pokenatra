<h1>Welcome to your Pokedex</h1>

<% @pokemons.each do |pokemon| %>

  <h2><%= pokemon.name %></h2>
  <p>Type: <%= pokemon.poke_type %></p>

  <img src="<%= pokemon.img_url %>" alt="">
  <p><a href="pokemons/<%= pokemon.id %>"><%=pokemon.name%>'s homepage</a></p>

<% end %>

